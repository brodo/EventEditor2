primaryColor = #00AB6F
primaryColorLight = #60D5AC
primaryColorLighter = #60D5AC
primaryColorDark = #20805E
primaryColorDarker = #006F48

secondaryColor = #E9003A
secondaryColorLight = #F43D6B
secondaryColorLighter = #F46E8F
secondaryColorDark = #AE2C4C
secondaryColorDarker = #970026

smallFontSize = 12px
baseFontSize = 14px
bigFontSize = 18px
veryBigFontSize = 24px

#event-main
  height:100%
  margin: 0
  padding: 0
  min-height: 500px
  background-color: lightgray
  overflow:auto

  #right
    height: 100%
    width: 80%
    right: 0
    float:right

  #eplWorkspace
    height: 500px
    width: 100%
    margin: 0
    top: 10%
    overflow: scroll
    background-color: white

  #svgMain
    height: 5000px
    width: 5000px

  #sidebar
    height: 100%  
    width:20%
    float:left
    margin-right: 0

  .eventType, .patternType 
    border-radius: 15px
    color: white
    width: 200px
    height: 60px
    margin: 10px auto
    text-align: center
    padding-top: 30px
    cursor: move
    font-size: veryBigFontSize
    mar

  .eventType
    background-color: primaryColorLighter

  .patternType 
    background-color: secondaryColorLighter

  .eventName
    background-color: primaryColorLighter
    color:white;
    overflow: auto

  .event, .pattern
    fill: primaryColorLighter

  .eventHtml
    overflow: auto

  .eventInnerDiv, .patternInnerDiv
    color:white
    overflow: auto
    

  .parameters
    overflow: auto
    height: calc(100% - 25px)


  .eventName
    clear: both

  .eventTitle
    fill: white
    text-anchor: middle
    cursor: move
    font-size: veryBigFontSize

  .eventTitleRect
    fill: secondaryColorLighter
    cursor: move


  .leftResizeBar, .rightResizeBar
    cursor: ew-resize
    opacity: 0

  .topResizeBar, .bottomResizeBar
    cursor: ns-resize
    opacity: 0

  .andRect, .followedByRect
    fill: secondaryColorDark

  .connector
    fill: none
    stroke: black
    stroke-width: 3

  .connectorCircle
    fill: secondaryColorDark

  .connectorText
    text-anchor: middle
    dominant-baseline: central

  .andLabel, .followedByLabel
    text-anchor: middle
    dominant-baseline: central
    fill: white
    font-size: smallFontSize

  .condition
    margin-left: 1rem

  .valueInput:after
    content "<br>"

  .whereWindow
    background-color: primaryColorLight
    border: solid
    color: black
    padding: 5px
    input
      margin-left: 5px
      width:30px
    select
      margin-left: 5px

  .pattentInput
    margin-left: 5px
    
  #topBar
    margin-top: 0
    height: 10%
    width: 100%
    margin: 0
    min-height: 50px
       
    .timeInterval
      padding-top: 1.5rem
      margin-left: 1.5rem

  .footer
    padding-top: 10px
    height: 20%
    width: 100%
    background-color: lightgray
    min-height: 100px

  #eplOutput
    margin-left: 20px
    height: 80px
    width: 400px

